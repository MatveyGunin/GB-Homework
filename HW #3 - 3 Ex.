using System;

namespace GB__2___EX._2
{
    class Program
    {
        static void Main(string[] args)

        {

            Console.WriteLine("Введите слово для инвертирования");
            var input = Console.ReadLine();
            
            for (var i = input.Length - 1; i >= 0; i--)
            {
                Console.Write(input[i]);
            }

           
        }
    }





        }


                

                

                


            
        
        

            
           
    

